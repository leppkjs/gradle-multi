<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
	<include resource="org/springframework/boot/logging/logback/base.xml" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</Pattern>
		</layout>
	</appender>
	<!-- logging-path for enviroment -->
	<springProfile name="test,prod">
		<property name="LOG_DIR" value="logs" />
	</springProfile>
	<springProfile name="dev">
		<property name="LOG_DIR" value="logs" />
	</springProfile>
	<property name="LOG_PATH_NAME" value="${LOG_DIR}/kai.log" />
	<appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH_NAME}</file>
		<append>true</append>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<fileNamePattern>${LOG_PATH_NAME}-%d{yyyyMMdd}.%i.log.zip</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 200MB -->
				<maxFileSize>200MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<!-- logging for test, product -->
	<springProfile name="test,prod">
		<!-- Loggers -->
		<logger name="org.springframework.core" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="org.springframework.beans" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="org.springframework.context" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="org.springframework.web" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="org.springframework.security" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="java.sql" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<!--     SQL 로그 -->
		<logger name="org.hibernate.SQL" level= "info" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="org.hibernate.type.BasicTypeRegistry" level= "warn" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<logger name="com.kcb" level= "debug" additivity="false">
			<appender-ref ref="dailyRollingFileAppender" />
		</logger>
		<root level="info">
			<appender-ref ref="dailyRollingFileAppender" />
		</root>
	</springProfile>
	<!-- logging for dev -->
	<springProfile name="dev">
		<!-- Loggers -->
		<logger name="org.springframework.core" level= "info" additivity="true">
		</logger>
		<logger name="org.springframework.beans" level= "info" additivity="true">
		</logger>
		<logger name="org.springframework.context" level= "info" additivity="true">
		</logger>
		<logger name="org.springframework.web" level= "info" additivity="true">
		</logger>
		<logger name="org.springframework.security" level= "info" additivity="true">
		</logger>
		<logger name="java.sql" level= "debug" additivity="true">
		</logger>
		<!--     SQL 로그 -->
		<logger name="org.hibernate.SQL" level= "debug" additivity="true">
		</logger>
		<logger name="org.hibernate.type.BasicTypeRegistry" level= "warn" additivity="true">
		</logger>
		<logger name="com.kcb" level= "debug" additivity="true">
		</logger>
		<root level="info">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="dailyRollingFileAppender" />
		</root>
	</springProfile>
</configuration>